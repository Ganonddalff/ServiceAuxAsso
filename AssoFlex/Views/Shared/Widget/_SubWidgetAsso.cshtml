@model AssoFlex.Models.ISubWidgetAsso

<div @*class="card-body "*@>
    <div>
        <div @*style="float: left"*@>
            <strong> @Html.LabelFor(p => p.Nom, @Model.Nom) </strong>
        </div>
    </div>
    <div @*style="clear: both"*@>
        @{
            int MaxDesc = 50;
            @if (Model.Description.Length > MaxDesc)
            {
                Model.Description = Model.Description.ToString().Substring(0, MaxDesc)+"...";
            }
        }
        @Model.Description
    </div>
</div>
