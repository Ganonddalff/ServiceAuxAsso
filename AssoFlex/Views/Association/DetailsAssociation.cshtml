@model AssoFlex.ViewModels.LayoutModelView
@{
    ViewBag.Title = "Association";
    Layout = "_Layout";
}
@section Headers
{
    <style>
        .jumbotron {
           background-image: url("@Model.Association.AssoHeaderImage");
           background-size: cover;
        }
        #detail {
            background-color: #ffffff;
            height: 100%;
            width: 100%;
            position: absolute;
            top: 20rem;
        }
    </style>
}
<section id="detail">
    <div class="col-md-6 col-sm-6"></div>
</section>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-4">
                <h2 class="display-3">Bienvenue sur @Model.Association.Nom</h2>
            </div>
            <div class="col-md-4 col-sm-8">
                <img src="~/assets/logos/@Model.Association.AssoLogo" alt="@Model.Association.AssoLogo"/>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#description" role="tab" aria-controls="description">Description</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#activites" role="tab" aria-controls="activites">Activités</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#adhesion" role="tab" aria-controls="adhesion">Adhésion</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="description" role="tabpanel">
                    @Model.Association.Description
                </div>
                <div class="tab-pane" id="activites" role="tabpanel">
                    
                </div>
                <div class="tab-pane" id="adhesion" role="tabpanel">
