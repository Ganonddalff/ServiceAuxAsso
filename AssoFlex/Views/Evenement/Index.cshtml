<section class="search-sec-event">
    <div class="container">
        <form action="#" method="post" novalidate="novalidate" height="20">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6 col-md-3 col-sm-12 p-0">
                            <input type="text" name="SearchString" class="form-control search-slt" placeholder="Votre recherche"/>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <select class="form-control search-slt" id="exampleFormControlSelect1">
                                <option>Catégories</option>
                                <option>Spectacle</option>
                                <option>Conférence</option>
                                <option>Séminaire</option>
                                <option>Manifestation</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                             <input class="btn btn-danger wrn-btn" type="submit" value="Filter"/>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<div class="container-md">
    <h2 class="page-section-heading text-center mb-0">Nos Evenements</h2>
    <div class="container-fluid padding">
         <div class="row padding">
             @{
                 @Html.Partial("Widget/_WidgetContainerEvent");
            }
        </div>
    </div>
    <br/>
    @if (User.IsInRole("Admin-Asso"))
    {
        <br/>
        <a href=@Url.Action("CreerEvent")>Créer un évènement</a>
