@model System.Collections.Generic.List<AssoFlex.Models.Evenement>

@{
    Layout = "_Layout";
}

<h2 class="page-section-heading text-center mb-0">Nos Evenements</h2>
<div class="row justify-content-start">
    @foreach (var eventInList in Model)
    {
        <div class="card col-4 m-5" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@eventInList.NomEvent</h5>
                <h6 class="card-subtitle">@eventInList.NbTickets</h6>
                <h6 class="card-subtitle">@eventInList.LieuEvent</h6>
                <td><a href=@Url.Action("Details","Evenement",new {id = @eventInList.IdEvent})>@eventInList.NomEvent</a></td>
            </div>
        </div>
    }
</div>
<br/>

@if (User.Identity.IsAuthenticated)
{

    <a href=@Url.Action("AchatTicket", "Evenement")>Acheter un billet</a>

    <br/>

    <a href=@Url.Action("CreerEvent")>Créer un évènement</a>
}
@if (User.Identity.IsAuthenticated.Equals(false))
{
    <a>Connectez-vous pour accéder à plus de services ! </a>
}