@model AssoFlex.ViewModels.UtilisateurViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>Création de Compte</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <link href="style-1.css" rel="stylesheet">
</head>
<body>
    <section class="page-section portfolio mt-5">
    
            <div class="container">
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Création de compte</h2>
                <!-- Icon Divider-->
                @* <div class="divider-custom"> *@
                @*     <div class="divider-custom-line"></div> *@
                @*     <div class="divider-custom-icon"><i class="fas fa-star"></i></div> *@
                @*     <div class="divider-custom-line"></div> *@
                @* </div> *@
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-xl-7">
                        @using (Html.BeginForm())
                        {
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Utilisateur.Prenom, new { @class = "form-control", placeholder = "Prénom" })
                                @Html.LabelFor(model => model.Utilisateur.Prenom)
                                @Html.ValidationMessageFor(model => model.Utilisateur.Prenom)
                            </div>
                            
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Utilisateur.Nom, new { @class = "form-control", placeholder = "Nom" })
                                @Html.LabelFor(model => model.Utilisateur.Nom)
                                @Html.ValidationMessageFor(model => model.Utilisateur.Nom)
                            </div>
    
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Utilisateur.Adresse, new { @class = "form-control", placeholder = "Adresse" })
                                @Html.LabelFor(model => model.Utilisateur.Adresse)
                                @Html.ValidationMessageFor(model => model.Utilisateur.Adresse)
                            </div>
                            
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Utilisateur.Telephone, new { @class = "form-control", placeholder = "Téléphone" })
                                @Html.LabelFor(model => model.Utilisateur.Telephone)
                                @Html.ValidationMessageFor(model => model.Utilisateur.Telephone)
                            </div>
                            
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Utilisateur.Email, new { @class = "form-control", placeholder = "Email" })
                                @Html.LabelFor(model => model.Utilisateur.Email)
                                @Html.ValidationMessageFor(model => model.Utilisateur.Email)
                            </div>
                            
                            <div class="form-floating mb-3">
                                @Html.TextBoxFor(model => model.Utilisateur.Password, new { @type = "password", @class = "form-control", placeholder = "Mot de passe" })
                                @Html.LabelFor(model => model.Utilisateur.Password)
                                @Html.ValidationMessageFor(model => model.Utilisateur.Password)
                            </div>
                            <!-- Submit Button-->
                            <button class="btn btn-primary btn-xl" type="submit">Créer</button>
                        }
                    </div>
                </div>
            </div>
        </section>
</body>
</html>