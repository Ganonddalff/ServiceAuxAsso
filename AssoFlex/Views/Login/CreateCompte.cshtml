@model AssoFlex.ViewModels.UtilisateurViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutFullScreen";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm("CreateCompte","Login", FormMethod.Post, new {enctype="multipart/form-data" }))
                {
                    <div class="card mx-4">
                        <div class="card-body p-4">
                            <h1>S'enregistrer</h1>
                            <p class="text-muted">Créer votre compte</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Prenom, new { @class = "form-control", type="text", placeholder = "Prénom(s)" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Prenom)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Nom, new { @class = "form-control", type="text", placeholder = "Nom(s)" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Nom)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-home"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Adresse, new { @class = "form-control", type="text", placeholder = "Adresse" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Adresse)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-phone"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Telephone, new { @class = "form-control", type="text", placeholder = "Téléphone" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Telephone)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Email, new { @class = "form-control", type="text", placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Email)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Password, new { @type = "password", @class = "form-control", placeholder = "Mot de passe" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Password)
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input class="form-control" type="password" placeholder="Repéter le mot de passe">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-picture"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.ProfilImg, new { @class = "form-control custom-file-input", @type="file", @id="customFile"})
                                @Html.ValidationMessageFor(model => model.ProfilImg)
                                @* <input name="ImageUpload" type="file" id="customFile"> *@
                            </div>
                            <button class="btn btn-block btn-success" type="submit">Créer</button>
                        </div>
                        <div class="card-footer p-4">
                            <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-block btn-facebook" type="button">
                                        <span>facebook</span>
                                    </button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-block btn-twitter" type="button">
                                        <span>twitter</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">  
        // Add the following code if you want the name of the file appear on select  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>
}
