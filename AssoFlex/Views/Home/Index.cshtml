@model AssoFlex.ViewModels.LayoutModelView
@{
    Layout = "_Layout";
}
<section>
    <div class="carousel slide" id="carouselExampleCaptions" data-ride="carousel">
        <ol class="carousel-indicators">
            <li class="active" data-target="#carouselExampleCaptions" data-slide-to="0"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/assets/img/slide1.jpg" class="d-block w-100" alt="First slide [800x400]">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-2">Bievenue sur AssoFlex</h1>
                    <h3>L'association qui se flex à tous vos projets.</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/img/slide2.jpg" class="d-block w-100" alt="Second slide [800x400]">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-2">Une application dédiée aux association</h1>
                    <h3>La confiance nous lie...</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/assets/img/slide3.jpg" class="d-block w-100" alt="Third slide [800x400]">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Quelques chiffres</h1>
                    <h1 class="display-2"><span style="color: #32434f">@Model.Associations.Count</span> associations</h1>
                    <h1 class="display-2"><span style="color: #32434f">@Model.Evenements.Count</span> évènement à venir</h1>
                    <h1 class="display-2"><span style="color: #32434f">@Model.Crowdfundings.Count</span> de projet</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<section class="search-sec">
    <div class="container">
        <form action="#" method="post" novalidate="novalidate" height="20">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6 col-md-3 col-sm-12 p-0">
                            <input type="text" class="form-control search-slt" placeholder="Votre recherche">
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <select class="form-control search-slt" id="exampleFormControlSelect1">
                                <option>Catégories</option>
                                <option>Associations</option>
                                <option>Évènements</option>
                                <option>Crowdfundings</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <button type="button" class="btn btn-danger wrn-btn"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<div class="jumbotron jumbotron-fluid" style="background-color: #93c4d9;margin-bottom: -25px">
    <div class="container">
        <div class="row">
            <div class="col-md-11 col-sm-1">
                <h2 class="display-5">Évènements à ne pas manquer</h2>
            </div>
            <div class="col-md-1 col-sm-11">
                <a class="" href=@Url.Action("Index", "Evenement")><i class="fa fa-arrow-right"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var wm in Model.WidgetsEvents)
                {
                    if (wm.IdEvent <= 3)
                    {
                        @Html.Partial(string.Concat(new[] { "Widget", "/", "_WidgetEvent" }), wm)
                    }
                }
            </div>
        </div>
    </div>
    <hr class="my-4">
</div>

