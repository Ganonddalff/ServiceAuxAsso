@using System.Drawing
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.Rendering
@model AssoFlex.ViewModels.LayoutModelView
@{
    ViewBag.Title = "Souscription";
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm("AddSouscription","Souscription", FormMethod.Post, new {enctype="multipart/form-data" }))
                {
                    <div class="card mx-4">
                        <div class="card-body p-4">
                            <h1>Enregistrer votre association</h1>
                            <p class="text-muted">Créer votre compte association</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <select asp-for="@Model.Association.CategorieAsso" asp-items="Html.GetEnumSelectList<CategoriesAsso>()" class="form-control"> </select>
                                @Html.ValidationMessageFor(model => model.Association.CategorieAsso)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Association.Nom, new {@class = "form-control", type = "text", placeholder = "Nom"})
                                @Html.ValidationMessageFor(model => model.Association.Nom)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Utilisateur.Nom, new { @class = "form-control", type="text", placeholder = "Nom(s)" })
                                @Html.ValidationMessageFor(model => model.Utilisateur.Nom)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-home"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Association.NumSiret, new {@class = "form-control", type = "text", placeholder = "Numéro SIRET"})
                                @Html.ValidationMessageFor(model => model.Association.NumSiret)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-phone"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Association.MontantAdhesion, new {@class = "form-control", type = "text", placeholder = "Montant adhésion mensuelle"})
                                @Html.ValidationMessageFor(model => model.Association.MontantAdhesion)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                @Html.TextAreaFor(model => model.Association.Description, new {@class = "form-control", type = "text", placeholder = "Décrivez votre association"})
                                @Html.ValidationMessageFor(model => model.Association.Description)
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Association.RIB, new {@class = "form-control", type = "file", id = "RIBFile", placeholder = "RIB"})
                                @Html.ValidationMessageFor(model => model.Association.RIB)
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-picture"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Association.PieceIdentite, new {@class = "form-control", type = "file", id = "pieceIdentiteFile", placeholder = "Pièce d'identité"})
                                @Html.ValidationMessageFor(model => model.Association.PieceIdentite)
                                @* <input name="ImageUpload" type="file" id="customFile"> *@
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-picture"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(model => model.Association.PublieJO, new {@class = "form-control", type = "file", id = "publieJOFile", placeholder = "Publication au journal officiel"})
                                @Html.ValidationMessageFor(model => model.Association.PublieJO)
                                @* <input name="ImageUpload" type="file" id="customFile"> *@
                            </div>
                            <button class="btn btn-block btn-success" type="submit">Créer</button>
                        </div>
                        @* <div class="card-footer p-4"> *@
                        @*     <div class="row"> *@
                        @*         <div class="col-6"> *@
                        @*             <button class="btn btn-block btn-facebook" type="button"> *@
                        @*                 <span>facebook</span> *@
                        @*             </button> *@
                        @*         </div> *@
                        @*         <div class="col-6"> *@
                        @*             <button class="btn btn-block btn-twitter" type="button"> *@
                        @*                 <span>twitter</span> *@
                        @*             </button> *@
                        @*         </div> *@
                        @*     </div> *@
                        @* </div> *@
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">  
        // Add the following code if you want the name of the file appear on select  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>
}
    
